{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "group:codemirror",
    "group:tiptapMonorepo",
    "schedule:weekly",
    ":label(dependencies)"
  ],
  "automerge": true,
  "automergeType": "pr",
  "rangeStrategy": "bump",
  "reviewers": ["dotoleeoak"],
  "lockFileMaintenance": { "enabled": true }
}
