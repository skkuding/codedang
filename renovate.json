{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "group:codemirror",
    "group:tiptapMonorepo",
    "schedule:weekly",
    ":label(dependencies)"
  ],
  "constraints": {
    "go": "1.19.1"
  },
  "rangeStrategy": "bump",
  "reviewers": ["dotoleeoak"],
  "lockFileMaintenance": { "enabled": true },
  "ignoreDeps": ["reflect-metadata", "@nestjs-modules/mailer"],
  "packageRules": [
    {
      "matchDatasources": ["golang-version"],
      "enabled": false
    }
  ]
}
