{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "group:codemirror",
    "group:tiptapMonorepo",
    "schedule:weekly",
    ":label(dependencies)"
  ],
  "constraints": {
    "go": "1.19.1" // for Gitpod
  },
  "rangeStrategy": "bump",
  "reviewers": ["dotoleeoak"],
  "lockFileMaintenance": { "enabled": true },
  "ignoreDeps": ["reflect-metadata"]
}
