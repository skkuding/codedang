meta {
  name: Succeed
  type: graphql
  seq: 1
}

post {
  url: {{gqlUrl}}
  body: graphql
  auth: none
}

body:graphql {
  mutation DeleteCourseQnAComment(
    $groupId: Int!
    $qnaOrder: Int!
    $commentOrder: Int!
  ) {
    deleteCourseQnAComment(
      groupId: $groupId
      qnaOrder: $qnaOrder
      commentOrder: $commentOrder
    ) {
      id
      content
      isCourseStaff
      order
      courseQnAId
      createTime
    }
  }
}

body:graphql:vars {
  {
    "groupId": 2,
    "qnaOrder": 1,
    "commentOrder": 1
  }
}

script:pre-request {
  await require("./login").loginInstructor(req);
}

