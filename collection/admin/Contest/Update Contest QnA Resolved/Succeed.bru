meta {
  name: Succeed
  type: graphql
  seq: 1
}

post {
  url: {{gqlUrl}}
  body: graphql
  auth: none
}

body:graphql {
  mutation ToggleContestQnAResolved(
    $contestId: Int!,
    $qnAOrder: Int!
  ) {
    toggleContestQnAResolved(
      contestId: $contestId,
      qnAOrder: $qnAOrder
    ) {
      id
      order
      isResolved
      title
    }
  }
}

body:graphql:vars {
  {
    "contestId": 20,
    "qnAOrder": 1
  }
}

script:pre-request {
  await require("./login").loginContestAdmin(req);
}

