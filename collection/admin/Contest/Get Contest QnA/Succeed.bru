meta {
  name: Succeed
  type: graphql
  seq: 1
}

post {
  url: {{gqlUrl}}
  body: graphql
  auth: none
}

body:graphql {
  query GetContestQnA($contestId: Int!, $order: Int!) {
    getContestQnA(contestId: $contestId, order: $order) {
      id
      title
      content
      createTime
      createdById
      createdBy {
        username
      }
      comments {
        content
        createdById
        createdBy {
          username
        }
      }
    }
  }
}

body:graphql:vars {
  {
    "contestId": 20,
    "order": 1
  }
}

assert {
  res.body.data.getContestQnA: isObject
}

script:pre-request {
  await require("./login").loginContestAdmin(req);
}

