meta {
  name: NOT_FOUND
  type: graphql
  seq: 2
}

post {
  url: {{gqlUrl}}
  body: graphql
  auth: none
}

body:graphql {
  mutation ($groupId: Int, $noticeInput: CreateNoticeInput!) {
    createNotice(groupId: $groupId, input: $noticeInput) {
      id
      title
      content
      isFixed
      groupId
      createdBy {
        username
      }
    }
  }
}

body:graphql:vars {
  {
    "groupId": 99999,
    "noticeInput": {
      "title": "Notice created by bruno",
      "content": "123",
      "isFixed": false,
      "isVisible": true
    }
  }
}

assert {
  res.body.errors[0].extensions.code: eq "NOT_FOUND"
  res.body.errors[0].message: eq "Group does not exist"
}
