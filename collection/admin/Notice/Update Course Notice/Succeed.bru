meta {
  name: Succeed
  type: graphql
  seq: 1
}

post {
  url: {{gqlUrl}}
  body: graphql
  auth: none
}

body:graphql {
  mutation ($courseNoticeId: Int!, $input: UpdateCourseNoticeInput!) {
    updateCourseNotice(courseNoticeId: $courseNoticeId, input: $input) {
      id
      createdById
      title
      content
      isPublic
      isFixed
      createTime
      updateTime
      groupId
    }
  }
}

body:graphql:vars {
  {
    "courseNoticeId": 1,
    "input": {
      "title": "updated title"
    }
  }
}

assert {
  res.body.data.updateCourseNotice: isDefined
}

