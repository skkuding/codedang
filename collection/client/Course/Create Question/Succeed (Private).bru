tests {
  test("should create a private question", function() {
    const data = res.getBody();
    expect(res.getStatus()).to.equal(201);
    expect(data.isPrivate).to.equal(true);
    expect(data.title).to.equal("개인적인 질문이 있습니다");
    expect(data.category).to.equal("general");
