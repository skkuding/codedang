meta {
  name: Succeed
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/course/invite?invitation=123
  body: none
  auth: none
}

params:query {
  invitation: 123
}

assert {
  res.status: eq 200
  res("id"): eq 2
  res("groupName"): isString
  res("description"): isString
  res("isGroupLeader"): isBoolean
  res("isJoined"): eq true
}

script:pre-request {
  await require("./login").loginUser(req);
}

